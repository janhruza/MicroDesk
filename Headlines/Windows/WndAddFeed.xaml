<core:IconlessWindow x:Class="Headlines.Windows.WndAddFeed"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:Headlines.Windows"
                     xmlns:core="clr-namespace:LibMicroDesk.Windows;assembly=LibMicroDesk"
                     mc:Ignorable="d"
                     Title="Add new Feed"
                     ResizeMode="CanMinimize"
                     SizeToContent="WidthAndHeight"
                     WindowStartupLocation="CenterOwner">

    <StackPanel Width="400"
                Margin="10">
        <Label Content="Source address"/>
        <TextBox Name="txtUrl"
                 TextChanged="txtUrl_TextChanged"/>

        <StackPanel Margin="0,10,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Cancel"
                    Name="btnCancel"
                    Margin="0,0,5,0"
                    Click="btnCancel_Click"/>
            
            <Button Content="Add"
                    Name="btnAdd"
                    IsEnabled="False"
                    Click="btnAdd_Click"/>

        </StackPanel>
        
    </StackPanel>
    
</core:IconlessWindow>
