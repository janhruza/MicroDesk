<local:IconlessWindow x:Class="LibMicroDesk.Windows.WndGeneralSettings"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:LibMicroDesk.Windows"
                      mc:Ignorable="d"
                      Title="Settings"
                      SizeToContent="WidthAndHeight"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="NoResize">
    
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <Label Content="Application theme"/>
            <ComboBox Name="cbxTheme"
                      Width="350"/>

            <Label Content="Culture"
                   Margin="0,5,0,0"/>
            <ComboBox Name="cbxCulture"
                      Width="350"/>

        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Cancel"
                    Margin="0,0,5,0"
                    Name="btnCancel"
                    Click="btnCancel_Click"/>
            
            <Button Content="OK"
                    Name="btnOk"
                    Click="btnOk_Click"/>

        </StackPanel>
    </Grid>
    
</local:IconlessWindow>
