<local:IconlessWindow x:Class="LibMicroDesk.Windows.WndAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibMicroDesk.Windows"
        mc:Ignorable="d"
        Title="About MicroDesk"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <StackPanel Margin="10">
        <Label Content="About Micro Desktop Solution"
               FontSize="28"/>

        <TextBlock>
            <Run Text="Author"/>
            <Run Text="Jan Hrůza"
                 FontWeight="Bold"
                 Foreground="{x:Static SystemColors.AccentColorBrush}"/>
        </TextBlock>

        <TextBlock>
            <Run Text="Version"/>
            <Run Text="1.0.0"
                 FontWeight="Bold"
                 Foreground="{x:Static SystemColors.AccentColorBrush}"/>
        </TextBlock>

        <TextBlock>
            <Run Text="License"/>
            <Run Text="MIT"
                 FontWeight="Bold"
                 Foreground="{x:Static SystemColors.AccentColorBrush}"/>

        </TextBlock>

        <TextBlock TextWrapping="Wrap">
            <Run Text="Description"/>
            <Run Text="A simple desktop solution for managing tasks, notes, and more."
                 FontWeight="Bold"
                 Foreground="{x:Static SystemColors.AccentColorBrush}"/>
        </TextBlock>

    </StackPanel>
    
</local:IconlessWindow>
