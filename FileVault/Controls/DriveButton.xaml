<UserControl x:Class="FileVault.Controls.DriveButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileVault.Controls"
             mc:Ignorable="d">

    <StackPanel>
        <Label Content="Drive Label"
               Name="lblLabel"/>
        
        <ProgressBar Minimum="0"
                     Maximum="100"
                     Height="15"
                     Width="200"
                     BorderThickness="0"
                     Name="pbFree"/>

        <Label Name="lblFreeSpace">
            <Label.Content>
                <TextBlock>
                    <Run Name="rFree"
                         Text="0"/>
                    
                    <Run Text="GB free of"/>
                    
                    <Run Name="rTotal"
                         Text="0"/>
                    
                    <Run Text="GB"/>
                </TextBlock>
            </Label.Content>
        </Label>

    </StackPanel>
    
</UserControl>
