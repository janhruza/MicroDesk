<Page x:Class="FileVault.Pages.PgDrives"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileVault.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Select a drive">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Expander Grid.Row="0"
                  Header="Available drives"
                  IsExpanded="True">

            <UniformGrid Name="ugAvailable"
                         Columns="3"/>

        </Expander>

        <Expander Grid.Row="1"
                  Header="Unavailable drives">

            <UniformGrid Name="ugUnavailable"
                         Columns="3"/>

        </Expander>
        
    </Grid>
</Page>
