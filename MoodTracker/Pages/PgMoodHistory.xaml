<Page x:Class="MoodTracker.Pages.PgMoodHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoodTracker.Pages"
      mc:Ignorable="d"
      Title="Mood History"
      Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Mood statistics"
               Grid.Row="0"/>

        <UniformGrid Columns="3"
                     Rows="1"
                     Grid.Row="1"
                     Margin="0,10,0,0">

            <Border>
                <StackPanel>
                    <TextBlock FontSize="48"
                               Text="😃"
                               HorizontalAlignment="Center"/>

                    <Label HorizontalAlignment="Center">
                        <Label.Content>
                            <TextBlock>
                                <Run Text="Good -"/>
                                <Run Name="rGood" 
                                     Text="0"
                                     FontWeight="Bold"/>
                            </TextBlock>
                        </Label.Content>
                    </Label>
                </StackPanel>
            </Border>

            <Border>
                <StackPanel>
                    <TextBlock FontSize="48"
                               Text="😐"
                               HorizontalAlignment="Center"/>

                    <Label HorizontalAlignment="Center">
                        <Label.Content>
                            <TextBlock>
                                <Run Text="Okay -"/>
                                <Run Name="rOkay" 
                                     Text="0"
                                     FontWeight="Bold"/>
                            </TextBlock>
                        </Label.Content>
                    </Label>
                </StackPanel>
            </Border>

            <Border>
                <StackPanel>
                    <TextBlock FontSize="48"
                               Text="😞"
                               HorizontalAlignment="Center"/>

                    <Label HorizontalAlignment="Center">
                        <Label.Content>
                            <TextBlock>
                                <Run Text="Bad -"/>
                                <Run Name="rBad" 
                                     Text="0"
                                     FontWeight="Bold"/>
                            </TextBlock>
                        </Label.Content>
                    </Label>
                </StackPanel>
            </Border>

        </UniformGrid>

        <StackPanel Grid.Row="2"
                    Margin="0,10,0,0">
            
            <Label Content="Average mood"/>
            <Border HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock FontSize="50"
                               Name="tbAverage"
                               Text="😃"/>

                    <Label HorizontalAlignment="Center"
                           Content="Good"
                           Name="lblAverage"/>
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>
</Page>
